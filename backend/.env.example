# App Configuration
APP_NAME=redaxai.app
APP_ENV=development
DEBUG=true
API_VERSION=v1

# Database (DigitalOcean Managed PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:25060/oscuratestiai?ssl=require
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis (DigitalOcean Managed Redis)
REDIS_URL=redis://default:password@host:25061/0
CELERY_BROKER_URL=redis://default:password@host:25061/1

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=21600
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Stripe (TEST MODE initially)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PREMIUM=price_xxx
STRIPE_PRICE_ID_PROFESSIONAL=price_xxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxx

# AI APIs
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Email (SendGrid or Resend)
SENDGRID_API_KEY=SG.your_sendgrid_key
FROM_EMAIL=noreply@redaxai.app

# Monitoring
SENTRY_DSN=https://your-sentry-dsn

# CORS (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Frontend URL
FRONTEND_URL=http://localhost:3000
